@{
    ViewData["Title"] = "Notifications"; // Sets the page title
}

<div class="container">
    <!-- Main container -->
    <h2 class="text-blue mb-4">Notifications</h2> <!-- Page heading -->

    <div class="row mb-4">
        <div class="col-md-6">
            <div class="d-flex justify-content-between align-items-center">
                <h4>Your Notifications</h4> <!-- Notifications heading -->
                <div>
                    <button type="button" class="btn btn-outline-primary btn-sm me-2">Mark All as Read</button> <!-- Mark all as read button -->
                    <button type="button" class="btn btn-outline-danger btn-sm">Clear All</button> <!-- Clear all button -->
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="input-group">
                <select class="form-select" id="notificationFilter">
                    <!-- Notification filter dropdown -->
                    <option value="all">All Notifications</option> <!-- All option -->
                    <option value="unread">Unread Only</option> <!-- Unread option -->
                    <option value="claims">Claim Updates</option> <!-- Claims option -->
                    <option value="system">System Messages</option> <!-- System option -->
                </select>
                <button class="btn btn-outline-secondary" type="button">Filter</button> <!-- Filter button -->
            </div>
        </div>
    </div>

    <div class="card">
        <div class="card-body p-0">
            <div class="list-group list-group-flush">
                <div class="list-group-item list-group-item-action unread-notification">
                    <div class="d-flex w-100 justify-content-between">
                        <h5 class="mb-1">Claim Approved: August 2025</h5> <!-- Notification title -->
                        <small class="text-muted">2 hours ago</small> <!-- Notification time -->
                    </div>
                    <p class="mb-1">Your claim for August 2025 has been approved by the Programme Coordinator.</p> <!-- Notification message -->
                    <small class="text-blue">Click to view claim details</small> <!-- Action text -->
                </div>

                <div class="list-group-item list-group-item-action unread-notification">
                    <div class="d-flex w-100 justify-content-between">
                        <h5 class="mb-1">Document Request</h5> <!-- Notification title -->
                        <small class="text-muted">1 day ago</small> <!-- Notification time -->
                    </div>
                    <p class="mb-1">Please upload supporting documents for your September 2025 claim.</p> <!-- Notification message -->
                    <small class="text-blue">Click to upload documents</small> <!-- Action text -->
                </div>

                <div class="list-group-item list-group-item-action">
                    <div class="d-flex w-100 justify-content-between">
                        <h5 class="mb-1">System Maintenance Notice</h5> <!-- Notification title -->
                        <small class="text-muted">3 days ago</small> <!-- Notification time -->
                    </div>
                    <p class="mb-1">Scheduled maintenance this Sunday from 2:00 AM to 6:00 AM.</p> <!-- Notification message -->
                    <small class="text-muted">System announcement</small> <!-- Notification type -->
                </div>

                <div class="list-group-item list-group-item-action">
                    <div class="d-flex w-100 justify-content-between">
                        <h5 class="mb-1">Claim Submitted: September 2025</h5> <!-- Notification title -->
                        <small class="text-muted">5 days ago</small> <!-- Notification time -->
                    </div>
                    <p class="mb-1">Your claim for September 2025 has been successfully submitted.</p> <!-- Notification message -->
                    <small class="text-muted">Claim ID: CLM-2025-009</small> <!-- Claim reference -->
                </div>
            </div>
        </div>
    </div>

    <nav aria-label="Notification pagination" class="mt-4">
        <!-- Pagination navigation -->
        <ul class="pagination justify-content-center">
            <li class="page-item disabled">
                <a class="page-link" href="#" tabindex="-1">Previous</a> <!-- Previous page link -->
            </li>
            <li class="page-item active"><a class="page-link" href="#">1</a></li> <!-- Page 1 link -->
            <li class="page-item"><a class="page-link" href="#">2</a></li> <!-- Page 2 link -->
            <li class="page-item"><a class="page-link" href="#">3</a></li> <!-- Page 3 link -->
            <li class="page-item">
                <a class="page-link" href="#">Next</a> <!-- Next page link -->
            </li>
        </ul>
    </nav>
</div>

<style>
    .unread-notification {
        background-color: rgba(30, 64, 175, 0.05); /* Light blue background for unread */
        border-left: 4px solid #1e40af; /* Blue left border */
    }
</style>