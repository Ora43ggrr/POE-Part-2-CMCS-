@model List<POE_Part_2.Models.Claim>
@{
    ViewData["Title"] = "My Claims"; // Sets the page title
}

<div class="container">
    <!-- Main container -->
    <h2 class="text-blue mb-4">My Claims</h2> <!-- Page heading -->

    <div class="card">
        <!-- Claims list card -->
        <div class="card-header">
            <!-- Card header -->
            <h5 class="mb-0">All Submitted Claims</h5> <!-- Section title -->
        </div>
        <div class="card-body">
            <!-- Card body -->
            <div class="table-responsive">
                <!-- Responsive table container -->
                <table class="table table-hover">
                    <!-- Claims table -->
                    <thead>
                        <!-- Table header -->
                        <tr>
                            <!-- Header row -->
                            <th>Claim ID</th> <!-- ID column -->
                            <th>Period</th> <!-- Period column -->
                            <th>Hours</th> <!-- Hours column -->
                            <th>Amount</th> <!-- Amount column -->
                            <th>Status</th> <!-- Status column -->
                            <th>Submission Date</th> <!-- Date column -->
                            <th>Actions</th> <!-- Actions column -->
                        </tr>
                    </thead>
                    <tbody>
                        <!-- Table body -->
                        @foreach (var claim in Model) // Loop through claims
                        {
                            <tr>
                                <!-- Claim row -->
                                <td>@claim.ClaimId</td> <!-- Claim ID -->
                                <td>@System.Globalization.DateTimeFormatInfo.CurrentInfo.GetMonthName(claim.Month) @claim.Year</td> <!-- Claim period -->
                                <td>@claim.HoursWorked</td> <!-- Hours worked -->
                                <td>R @claim.TotalAmount.ToString("N2")</td> <!-- Claim amount -->
                                <td><span class="status-badge status-@claim.Status.ToLower()">@claim.Status</span></td> <!-- Status badge -->
                                <td>@claim.SubmissionDate.ToString("dd MMM yyyy")</td> <!-- Submission date -->
                                <td>
                                    <!-- Actions cell -->
                                    <a href="#" class="btn btn-sm btn-outline-primary me-1">View</a> <!-- View button -->
                                    <a href="#" class="btn btn-sm btn-outline-danger">Delete</a> <!-- Delete button -->
                                </td>
                            </tr>
                        }
                        @if (!Model.Any()) // Check if no claims
                        {
                            <tr>
                                <td colspan="7" class="text-center">No claims submitted yet</td> <!-- Empty state message -->
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            <div class="text-center mt-3">
                <!-- Submit new claim button -->
                <a href="@Url.Action("SubmitClaim", "Home")" class="btn btn-primary">Submit New Claim</a> <!-- Submit claim button -->
            </div>
        </div>
    </div>
</div>